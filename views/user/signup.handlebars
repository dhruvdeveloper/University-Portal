<div class="row login">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <img class="logo login-image" src="../image/university.png">
            <h3 class="text-center">Account Register</h3>
            <form method="post" action="/signup">
                <div class="form-group">
                    <label for="name">Name<span style="color: red">*</span></label>
                    <input type="text" class="form-control" name="name" value="{{name}}" required>
                </div>
                <div class="form-group">
                    <label for="email">Email<span style="color: red">*</span></label>
                    <input type="email" name="email" class="form-control" value="{{email}}" required>
                </div>
                <div class="form-group">
                    <label for="password">Password<span style="color: red">*</span></label>
                    <input type="password" name="password" class="form-control" value="{{password}}" required>
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password<span style="color: red">*</span></label>
                    <input type="password" name="password2" class="form-control" value="{{password2}}" required>
                </div>
                <label class="radio-inline radio-custom-me"><input type="radio" name="who" value="f" id="radio-faculty"
                        required> Faculty</label>
                <label class="radio-inline radio-custom-me"><input type="radio" name="who" value="s" id="radio-student">
                    Student</label>
                <br>
                <label for="Enrollment" id="radio-student-lable" style="display: none">Enrollment Number<span style="color: red">*</span></label>
                <input type="text" name="enrollment" class="form-control" style="display: none" id="radio-student-input">
                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>